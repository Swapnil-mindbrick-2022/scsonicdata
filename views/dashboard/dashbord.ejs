     </div>
     
     
     <section id="main-content">
      <section class="wrapper main-wrapper row">  
        <div class="col-md-12" >              
            <section class="box">

              <canvas id="myChart" style="width:100%;max-width:700px"></canvas>

            </section>
       </div>      
                     
       
         
          
          <div class="col-md-5">  
            <section class="box" >

              <form action="/data" method="post" >
                <h4 class="heading"  >Create Alert</h4>
             
                    <div class="form-group row" >
                        <!-- <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label> -->
                        <div class="col-sm-10" style="width: 100%;">
                          <input type="text" class="form-control" id="name" placeholder="name" name ='name' required>
                        </div>
                      </div>
                      <fieldset class="form-group"  >
                        <div class="row" >
                          <legend class="col-form-label col-sm-2 pt-0" >criteria</legend><br>
                          <div class="col-sm-10" >
                            <div class="form-check" >
                              <input class="form-check-input" type="radio"  name="criteria"  id="gridRadios1" value="Greaterthan"
                               checked>
                              <label class="form-check-label" for="gridRadios1" >
                                Greater than
                              </label>
                            </div>
                            <div class="form-check">
                              <input class="form-check-input" type="radio" name="criteria"  id="gridRadios2" value="lessthan">
                              <label class="form-check-label" for="gridRadios2">
                                less than
                              </label>
                            </div>
                           
                          </div>
                        </div>
                      </fieldset>
                      <div class="form-group row">
                        <!-- <label for="inputEmail3" class="col-sm-2 col-form-label">value</label> -->
                        <div class="col-sm-10" style="width: 100%;">
                          <input type="number" class="form-control" id="value" name="value" placeholder="value" required>
                        </div>
                      </div>
                      <div class="form-group row">
                        <div class="col-sm-10">
                      <select style ='width:
                      385px; height:30px;margin-bottom: 15px;width:121%' name = 'days' required >
                        <option selected value="Everyday">Everyday</option>
                        <option value="Sun">Sun</option>
                        <option value="Mon">Mon</option>
                        <option value="Tus">Tus</option>
                        <option value="Wed">Wed</option>
                        <option value="Thu">Thu</option>
                        <option value="Fri">Fri</option>
                        <option value="Sat">Sat</option>
                      </select>
                    
                    </div><br><br>
                   
                      <div class="form-group row">
                             <label for="inputEmail3" style ='margin-left: -390px;'  required>criteria</label> <br>
                        <div class="col-sm-10">
                      <select style ='width:
                      385px; height:30px;margin-bottom: 15px;margin-left:16px; width:113%' name="pricesignal" required>
                        <option value="DK1">DK-1</option>
                        <option value="DK2">DK-2</option>
                        <option value="DKGas">DK-Gas</option>
                     
                      </select>
                    
                    </div>

                    <div class="form-group row">
                      <!-- <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label> -->
                      <div class="col-sm-9"style="margin-left:29px; width:89%">
                        <input type="email" name='email' class="form-control" id="inputEmail3" placeholder="Email" required>
                      </div>
                    </div>
                    <div class="form-group row">
                      <!-- <label for="inputPassword3" class="col-sm-2 col-form-label">Phone</label> -->
                      <div class="col-sm-9" style="margin-left:29px; width:89%">
                        <input type="text" class="form-control" id="phone" name="phone" placeholder="phone" required>
                      </div>
                    </div>
                    
                     <div class="form-group row">
                      <div class="col-sm-10">
                        <button type="submit" class="signbtn">Submit</button>
                      </div>
                    </div>
                  </form>
            </section>
            
       </div>
       
        <div class="col-md-7" > 
            

            <section class="box">
              <div class="box1" >
              <button class="alert">ALerts</button> 
              
              <button class="trigger">Trigger Alerts</button>
            </div>
           
            <div class="form-group" hidden > 	<!--		Show Numbers Of Rows 		-->
              <select class  ="form-control" name="state" id="maxRows" hidden>
              <option value="5000">Show ALL Rows</option>
              <option value="5">5</option>
              <option value="10">10</option>
              <option value="15">15</option>
              <option value="20">20</option>
              <option value="50">50</option>
              <option value="70">70</option>
              <option value="100">100</option>
             </select>
            
           </div>

              <table class="table table-striped table-class" id= "table-id" >
                <thead>
                  <tr>

                    <td  scope="col">Name</td>
                    <td>Price Signal</td>
                    <td>Criteria</td>
                    <td>Value</td>
                    <td>Email</td>
                    <td>active days</td>
                    <td>Actions</td>
                  </tr>
                </thead>
                <tbody>
                  <% data.forEach((alldata)=>{%>

                    <tr>
                   
                      <td scope="row"><%=alldata.name %></td>
                      <td><%=alldata.pricesignal %></td>
                      <td><%=alldata.criteria %></td>
                      <td><%=alldata.value %></td>
                      <td><%=alldata.email %></td>
                      <td><%=alldata.days %></td>
                      <td>
                        <form action="/delete/<%= alldata.id %>?_method=DELETE" method="POST">
                        <button style="background-color:white; border: 0px white;" type = "submit">
                          <i class="bi bi-trash"></i>
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                          </svg></button>
                          </form>
                        </td>
                    
                    
                
                    </tr>

                    <% }) %>
                 
                </tbody>
              </table>
              <div class='pagination-container' >
                <nav>
                  <ul class="pagination">
                    
                    <li data-page="prev" >
                             <span> < <span class="sr-only">(current)</span></span>
                            </li>
                   <!--	Here the JS Function Will Add the Rows -->
                <li data-page="next" id="prev">
                               <span> > <span class="sr-only">(current)</span></span>
                            </li>
                  </ul>
                </nav>
             
              </div>
            </section>
       </div>
       
      
 
        
        <script src="../css/scripts/dashboard.js" ></script>
        <script src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js'></script>
